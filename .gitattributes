###############################################################################
# Global settings
###############################################################################

# Normalize all text files to LF in repository
* text=auto eol=lf


###############################################################################
# Android / Kotlin / Gradle
###############################################################################

*.kt          text eol=lf
*.kts         text eol=lf
*.java        text eol=lf
*.xml         text eol=lf
*.gradle      text eol=lf
*.properties  text eol=lf
*.pro         text eol=lf


###############################################################################
# Web files
###############################################################################

*.html        text eol=lf
*.htm         text eol=lf
*.css         text eol=lf
*.js          text eol=lf
*.json        text eol=lf
*.md          text eol=lf
*.txt         text eol=lf


###############################################################################
# Scripts
###############################################################################

# Unix shell scripts
*.sh          text eol=lf

# Windows batch scripts
*.bat         text eol=crlf
*.cmd         text eol=crlf


###############################################################################
# Images & Binary Files (never modify line endings)
###############################################################################

*.png         binary
*.jpg         binary
*.jpeg        binary
*.gif         binary
*.webp        binary
*.svg         text eol=lf

*.keystore    binary
*.jks         binary
*.aar         binary
*.apk         binary
*.aab         binary
*.jar         binary
